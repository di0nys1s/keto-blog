
<%- include("partials/header") -%>

<h1>New Post</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="post-title">Title</label><br>
        <input class="form-control post-title" type="text" name="postTitle" placeholder="Insert your title" autocomplete="off">
        <label for="post-content">Post</label><br>
        <textarea class="form-control post-content" name="postBody" rows="5" cols="30" placeholder="Insert your content" autocomplete="off"></textarea>
    </div>
        <button class="btn btn-primary btn-post-submit" type="submit" name="submitPost">Publish</button>
</form>


<%- include("partials/footer") -%>